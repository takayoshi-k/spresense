-include $(TOPDIR)/Make.defs
-include $(SDKDIR)/Make.defs

# lwm2mlight built-in application info

CONFIG_EXAMPLES_LWM2MLIGHT_PRIORITY ?= SCHED_PRIORITY_DEFAULT
CONFIG_EXAMPLES_LWM2MLIGHT_STACKSIZE ?= 2048
CONFIG_EXAMPLES_LWM2MLIGHT_STACKSIZE_IN_USING_MBEDTLS ?= 5120

APPNAME = lwm2mlight
PRIORITY = $(CONFIG_EXAMPLES_LWM2MLIGHT_PRIORITY)
ifeq ($(CONFIG_EXTERNALS_MBEDTLS),y)
STACKSIZE = $(CONFIG_EXAMPLES_LWM2MLIGHT_STACKSIZE_IN_USING_MBEDTLS)
else
STACKSIZE = $(CONFIG_EXAMPLES_LWM2MLIGHT_STACKSIZE)
endif

# define

CFLAGS += -DHAVE_ASSERT_H
CFLAGS += -DLWM2M_CLIENT_MODE
CFLAGS += -DLWM2M_BOOTSTRAP
CFLAGS += -DLWM2M_LITTLE_ENDIAN
CFLAGS += -DLWM2M_SUPPORT_JSON
CFLAGS += -DWITH_TINYDTLS
CFLAGS += -DUIP_BUFSIZE=1294
CFLAGS += -DUIP_LLH_LEN=14
CFLAGS += -DUIP_IPUDPH_LEN=48

# lwm2mlight Example

LWM2MCORDIR = $(EXTERNAL_DIR)$(DELIM)lwm2m$(DELIM)wakaama$(DELIM)core
LWM2MSHADIR = $(EXTERNAL_DIR)$(DELIM)lwm2m$(DELIM)wakaama$(DELIM)examples$(DELIM)shared
# LWM2MCLIDIR = $(EXTERNAL_DIR)$(DELIM)lwm2m$(DELIM)wakaama$(DELIM)examples$(DELIM)client

ROOTDEPPATH += --dep-path $(LWM2MCORDIR)
ROOTDEPPATH += --dep-path $(LWM2MCORDIR)$(DELIM)er-coap-13
ROOTDEPPATH += --dep-path $(LWM2MSHADIR)
ROOTDEPPATH += --dep-path $(LWM2MSHADIR)$(DELIM)tinydtls
ROOTDEPPATH += --dep-path $(LWM2MSHADIR)$(DELIM)tinydtls$(DELIM)aes
ROOTDEPPATH += --dep-path $(LWM2MSHADIR)$(DELIM)tinydtls$(DELIM)ecc
ROOTDEPPATH += --dep-path $(LWM2MSHADIR)$(DELIM)tinydtls$(DELIM)sha2
# ROOTDEPPATH += --dep-path $(LWM2MCLIDIR)
VPATH       += :$(LWM2MCORDIR)
VPATH       += :$(LWM2MCORDIR)$(DELIM)er-coap-13
VPATH       += :$(LWM2MSHADIR)
VPATH       += :$(LWM2MSHADIR)$(DELIM)tinydtls
VPATH       += :$(LWM2MSHADIR)$(DELIM)tinydtls$(DELIM)aes
VPATH       += :$(LWM2MSHADIR)$(DELIM)tinydtls$(DELIM)ecc
VPATH       += :$(LWM2MSHADIR)$(DELIM)tinydtls$(DELIM)sha2
# VPATH       += :$(LWM2MCLIDIR)

ifeq ($(WINTOOL),y)
CFLAGS += -I"${shell cygpath -w $(LWM2MCORDIR)}"
CFLAGS += -I"${shell cygpath -w $(LWM2MSHADIR)}"
CFLAGS += -I"${shell cygpath -w $(LWM2MSHADIR)$(DELIM)tinydtls}"
# CFLAGS += -I"${shell cygpath -w $(LWM2MCLIDIR)}"
else
CFLAGS += -I$(LWM2MCORDIR)
CFLAGS += -I$(LWM2MSHADIR)
CFLAGS += -I$(LWM2MSHADIR)$(DELIM)tinydtls
# CFLAGS += -I$(LWM2MCLIDIR)
endif

ASRCS =
# LwM2M
CSRCS += block1.c
CSRCS += bootstrap.c
CSRCS += data.c
CSRCS += utils.c
CSRCS += tlv.c
CSRCS += discover.c
CSRCS += json.c
CSRCS += json_common.c
CSRCS += liblwm2m.c
CSRCS += list.c
CSRCS += management.c
CSRCS += objects.c
CSRCS += observe.c
CSRCS += packet.c
CSRCS += registration.c
CSRCS += transaction.c
CSRCS += uri.c
# COAP
CSRCS += er-coap-13.c
# tinyDTLS
CSRCS += platform.c
CSRCS += memtrace.c
CSRCS += netq.c
CSRCS += peer.c
CSRCS += session.c
CSRCS += ccm.c
CSRCS += commandline.c
#CSRCS += connection.c
CSRCS += crypto.c
CSRCS += dtls.c
CSRCS += dtls_time.c
CSRCS += dtls_debug.c
CSRCS += dtlsconnection.c
CSRCS += hmac.c
CSRCS += rijndael.c
CSRCS += ecc.c
CSRCS += sha2.c
# example
CSRCS += lightclient.c
CSRCS += lwm2m_lte_connection.c
CSRCS += object_device.c
CSRCS += object_security.c
CSRCS += object_server.c
CSRCS += test_object.c
MAINSRC = lwm2mlight_main.c

CONFIG_EXAMPLES_LWM2MLIGHT_PROGNAME ?= lwm2mlight$(EXEEXT)
PROGNAME = $(CONFIG_EXAMPLES_LWM2MLIGHT_PROGNAME)

include $(APPDIR)/Application.mk
